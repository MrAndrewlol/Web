{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "eslint-config-airbnb-base" ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    "rules": {
        "semi": ["error", "never"],
        "import/extensions": ["error", "ignorePackages", { "": "never" }] // Key part for ignoring extensions

    }
}
